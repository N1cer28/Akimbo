<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".fist_page.fist_page.zamarozitActivity">


    <RelativeLayout
        android:id="@+id/upper_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <TextView
            android:id="@+id/backPok"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text=" ⇐ Абонимент"
            android:textSize="28sp"
            android:textColor="@color/white"
            android:background="@color/black"
            />

        <TextView
            android:id="@+id/zamorozka"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="У вас осталось дней заморозки: 60. Минимальное количество дней заморозки: 20. Обращаем внимание, что если с момента заморозки прошло менее чем 20 дней, то при отмене заморозки, прошедшие дни не будут считать заморозкой."
            android:textSize="24sp"
            android:layout_marginTop="70dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textColor="@color/white" />



        <TextView
            android:id="@+id/skoko_dnei"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:text="На сколько дней заморозить?"
            android:layout_below="@id/zamorozka"
            android:textColor="#7E000000"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/skoko_dnei"
            android:layout_marginHorizontal="20dp"
            android:ems="10"
            android:inputType="number"
            android:text="От 20 до 60"
            android:textColor="#7E000000"
            android:minHeight="48dp" />

    </RelativeLayout>

</RelativeLayout>